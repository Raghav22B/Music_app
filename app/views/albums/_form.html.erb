<div class="d-flex justify-content-center form mt-5">
  <div class="  mt-5" >
    <%= form_with model: @album do |form| %>
      <div class="mt-5">
        <%= form.label :name%><br>
        <%= form.text_field :name %>   
      </div>
       <div class="mt-3">
         <%= form.label :description %><br>
         <%= form.text_area :description %>    
        </div>
      <div class="mt-3">
        <%= form.label :coverimage %><br>
        <%= form.file_field :cover_image %>    
      </div>
      <div class="mt-3">
       <%= form.label :tag_name %><br>
       <%= form.text_field :tag_list %>    
      </div>
      <div class="mt-3">  
        <%= form.label :audio_data %><br>
        <%= form.file_field :audio_data %>
      </div>
      <div class="mt-3">
        <%= form.submit %>
      </div>
      <div class="py-5">
      </div>
    <% end %>
  </div>
</div>